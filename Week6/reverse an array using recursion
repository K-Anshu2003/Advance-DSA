public class ReverseArray {
    public static void reverse(int[] arr, int start, int end) {
        if (start >= end) {
            return;
        }
        // Swap elements at start and end
        int temp = arr[start];
        arr[start] = arr[end];
        arr[end] = temp;

        // Recursive call
        reverse(arr, start + 1, end - 1);
    }
}
