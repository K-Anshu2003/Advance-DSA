class Solution {
    public double myPow(double x, int n) {
        long N = n;
        if(N<0){
            x = 1/x;
        }
        return helper(x,N);
    }
    public double helper(double x, long n){
        if(n == 0) return 1.0;
        double ans = helper(x, n/2);
        if(n%2 == 0) return ans * ans;
        else return x*ans*ans;
    }
}
