class Solution {
    public boolean isPalindrome(ListNode head) {

        ListNode temp = head;
        List<Integer> li = new ArrayList<>();
        while(temp != null){
            li.add(temp.val);
            temp = temp.next;
        }
        int left = 0;
        int right = li.size()-1;

        while(left < right){
            if(li.get(left) != li.get(right)){
                return false;
            }
            left++;
            right--;
        }
        return true;  
    }
}
