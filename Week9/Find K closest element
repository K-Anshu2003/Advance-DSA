class Solution {
    public List<Integer> findClosestElements(int[] arr, int k, int x) {
        PriorityQueue<Integer> maxHeap = new PriorityQueue<>(
            (a, b) -> {
                // Compare element distances from x: bigger difference = higher priority in heap
                int diffA = Math.abs(a - x);
                int diffB = Math.abs(b - x);
                if (diffA == diffB) {
                    // If distances same, bigger number is considered larger for tie-break
                    return b - a;
                }
                return diffB - diffA; // bigger difference first
            }
        );
        
        for (int num : arr) {
            maxHeap.offer(num);    // Add element to max heap
            if (maxHeap.size() > k) {
                maxHeap.poll();    // Remove element that's farthest from x if limit exceeded
            }
        }
        
        // Get all elements from heap and sort in ascending order before returning
        List<Integer> result = new ArrayList<>(maxHeap);
        Collections.sort(result);
        return result;  
    }
}
