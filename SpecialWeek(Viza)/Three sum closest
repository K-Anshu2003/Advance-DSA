class Solution {
    public int threeSumClosest(int[] nums, int target) {

        int minDiff = Integer.MAX_VALUE;
        int ans = 0;

        int n = nums.length;
        for (int i = 0; i < n - 2; i++) {
            for (int j = i + 1; j < n - 1; j++) {
                for (int k = j + 1; k < n; k++) {

                    int sum = nums[i] + nums[j] + nums[k];
                    if (Math.abs(sum - target) < minDiff) {
                        minDiff = Math.abs(sum - target);
                        ans = sum;
                    }
                }
            }
        }
        return ans;
    }
}
