import java.util.*;

public class Solution {
    public List<String> letterCasePermutation(String s) {
        List<String> result = new ArrayList<>();
        backtrack(result, s.toCharArray(), 0, new StringBuilder());
        return result;
    }
    
    private void backtrack(List<String> result, char[] chars, int index, StringBuilder sb) {
        if (index == chars.length) {
            result.add(sb.toString());
            return;
        }
        
        char c = chars[index];
        if (Character.isLetter(c)) {
            // Explore lowercase branch
            sb.append(Character.toLowerCase(c));
            backtrack(result, chars, index + 1, sb);
            sb.deleteCharAt(sb.length() - 1);
            
            // Explore uppercase branch
            sb.append(Character.toUpperCase(c));
            backtrack(result, chars, index + 1, sb);
            sb.deleteCharAt(sb.length() - 1);
        } else {
            // Digit - only one option
            sb.append(c);
            backtrack(result, chars, index + 1, sb);
            sb.deleteCharAt(sb.length() - 1);
        }
    }
}
