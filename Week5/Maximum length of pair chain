class Solution {
    // time complexity = nlogn
    public int findLongestChain(int[][] pairs) {
        
        // Integer.compare(a[1], b[1])
        Arrays.sort(pairs, (a,b) -> a[1]-b[1]);  // time -- n*log n

        int max = 1;
        int prev = pairs[0][1];
        
        // time -- n
        for(int i=1; i<pairs.length; i++){
            if(prev < pairs[i][0]){
                max++;
                prev = pairs[i][1];
            }
        }
        return max;
    }
}
