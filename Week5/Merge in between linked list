class Solution {
    public ListNode mergeInBetween(ListNode list1, int a, int b, ListNode list2) {
        
        ListNode prev = null;
        ListNode curr = list1;
        ListNode head2 = list2;
        for(int i=0; i<a; i++){
            prev = curr;
            curr = curr.next;
        }
        prev.next = head2;
        prev = prev.next;

        for(int i=a; i<b; i++){
            curr = curr.next;
        }
        while(prev.next != null){
            prev = prev.next;
        }

        prev.next = curr.next;
        curr.next = null; 

        return list1;
    }
}
