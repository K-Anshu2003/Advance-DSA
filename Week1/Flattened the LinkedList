class Solution {
    public Node flatten(Node root) {
        // code here
        
        if(root == null || root.next == null){
            return root;
        }
        
        root.next = flatten(root.next);
        root = mergeTwoLL(root, root.next);
        return root;
    }
    
    public Node mergeTwoLL(Node root1, Node root2){
        
        if(root1 == null) return root2;
        if(root2 == null) return root1;
        
        if(root1.data <= root2.data){
            root1.bottom = mergeTwoLL(root1.bottom, root2);
            return root1;
        }else{
            root2.bottom = mergeTwoLL(root1, root2.bottom);
            return root2;
        }
    }
}
