class Solution {
    public ListNode reverseKGroup(ListNode head, int k) {

       ListNode curr = head;
       int count = 0;

       while(curr != null && count < k){
        curr = curr.next;
        count++;
       } 

       if(count == k){
         ListNode prev = null;
         curr = head;

         for(int i=0; i<k; i++){
            ListNode nextTemp = curr.next;
            curr.next = prev;
            prev = curr;
            curr = nextTemp;
         }

         head.next = reverseKGroup(curr, k);
         return prev;
       }

       return head;
        
    }
    
}
