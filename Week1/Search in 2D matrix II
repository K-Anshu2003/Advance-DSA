class Solution {
    public boolean searchMatrix(int[][] matrix, int target) {

        int m = matrix.length;
        int n = matrix[0].length-1;       

        int row = 0;
        int col = n;

        return search(matrix, m, n, row, col, target);
    }
    public boolean search(int[][] matrix,int m, int n, int row, int col, int target){
        
        if(row >= m || col < 0){
            return false;
        }

        if (target > matrix[row][col]) {
            return search(matrix, m, n, row + 1, col, target);
        } else if (target < matrix[row][col]) {
            return search(matrix, m, n, row, col - 1, target);
        } else {
            return true;
        }
    }
}
